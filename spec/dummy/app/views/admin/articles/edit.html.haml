- content_for :page_header do
  %h1
    - if @article.new_record?
      Добавить #{taccusative(:article)}
    - else
      Редактировать #{taccusative(:article)}
  %p= link_to 'Назад', [:admin, :articles]

= form_for [:admin, @article] do |f|
  = render 'validate', { f: f }
  %table
    %tr
      %th= f.label :title
      %td= f.text_field :title
  = render "admin/seos/block", f: f
  .actions
    = f.submit 'Сохранить'
    = f.submit 'Применить'